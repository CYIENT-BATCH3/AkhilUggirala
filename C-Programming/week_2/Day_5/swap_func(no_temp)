//WAP to swap 2 variables without temporary variable

Function with no return type and no arguments
#include<stdio.h>       //include standard input and output header file using preprocessor directive
void swap()             //defintion off swap function
{
    int n1=75,n2=87;     //declare local variables n1,n2
    printf("Before Swap n1=%d n2=%d\n",n1,n2);      //prints the n1 & n2 before swap
    n1=n1+n2;                                       //perform few computations to swap variables
    n2=n1-n2;
    n1=n1-n2;
    printf("After Swap n1=%d n2=%d\n",n1,n2);       //prints the n1 & n2 after swap
}
int main()                      //start main function
{
    swap();                     //call swap function
}


Function with no return type and with arguments 
//WAP to swap 2 variables without temporary variable
#include<stdio.h>       //include standard input and output header file using preprocessor directive
void swap(int ,int );
int main()                      //start main function
{
    int x,y;     //declare local variables n1,n2
    printf("Enter Values x and y:\n");
    scanf("%d %d",&x,&y);
    swap(x,y);                     //call swap function
}
void swap(int n1,int n2)             //defintion off swap function with no return and with arguments
{
    printf("Before Swap n1=%d n2=%d\n",n1,n2);      //prints the n1 & n2 before swap
    n1=n1+n2;                                       //perform few computations to swap variables
    n2=n1-n2;
    n1=n1-n2;
    printf("After Swap n1=%d n2=%d\n",n1,n2);       //prints the n1 & n2 after swap
}
