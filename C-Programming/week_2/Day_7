//wap to perform calculations using switch case for 2 integer values
#include<stdio.h>			    //include the header file using preprocessor directive
int main()				     
{
    int a,b;				    //declare operands as integer variables
    char choice;                            //declare expression as choice
    scanf("%d %d",&a,&b);
    printf("enter the operation\n");       //selects the operation to be performed
    scanf(" %c",&choice);		   //enter the choice to made to perform particular operation
    switch(choice)    
    {
    case '+':
    printf("%d",a+b);			  //print if addition is choosen
    break;
    case '-':
    printf("%d",a-b);
    break;
    case '*':
    printf("%d",a*b);
    break;
    case '/':
    printf("%d",a/b);
    break;
    case '%':
    printf("%d",a%b);
    break;
    default:
    printf("Invalid Input");
    }    
    
}
